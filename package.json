{
  "name": "@textile/threads-client",
  "version": "0.0.1",
  "description": "Textile's JS client for interacting with remote Threads",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "prepare": "npm run build",
    "test": "jest --no-watchman",
    "lint": "./node_modules/tslint/bin/tslint  -c tslint.json --project .",
    "docs": "./node_modules/typedoc/bin/typedoc",
    "precommit": "npm run lint && npm test",
    "preversion": "npm run docs; npm run precommit",
    "release": "npm version patch",
    "postversion": "git push --follow-tags",
    "browser": "webpack --mode production",
    "serve": "webpack-dev-server --mode development --progress --color"
  },
  "engines": {
    "node": ">= 10.0.0",
    "npm": ">= 3.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/textileio/js-threads-client.git"
  },
  "bugs": {
    "url": "https://github.com/textileio/js-threads-client/issues"
  },
  "keywords": [
    "textile",
    "threads",
    "IPFS",
    "p2p"
  ],
  "author": "textile.io",
  "license": "MIT",
  "dependencies": {
    "isomorphic-ws": "^4.0.1",
    "uuid": "^3.3.3",
    "ws": "^7.2.0"
  },
  "devDependencies": {
    "@textile/tslint-rules": "^1.0.3",
    "@types/ws": "^6.0.3",
    "@types/uuid": "^3.4.6",
    "@types/jest": "^24.0.22",
    "eslint": "^6.6.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-prettier": "^6.5.0",
    "eslint-config-strict": "^14.0.1",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-node": "^10.0.0",
    "eslint-plugin-prettier": "^3.1.1",
    "jest": "^24.9.0",
    "jest-cli": "^24.9.0",
    "jsdoc": "^3.6.3",
    "nodemon": "^1.19.4",
    "prettier": "^1.19.1",
    "prettier-eslint": "^9.0.0",
    "ts-jest": "^24.1.0",
    "ts-loader": "^6.2.1",
    "tslint": "^5.20.1",
    "typedoc": "^0.15.0",
    "typedoc-plugin-markdown": "^2.2.11",
    "typescript": "^3.7.2",
    "webpack": "^4.41.2",
    "webpack-cli": "^3.3.10",
    "webpack-dev-server": "^3.9.0"
  }
}
