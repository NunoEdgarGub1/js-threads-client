{
  "name": "@textile/threads-client",
  "version": "0.0.1",
  "description": "Textile's JS client for interacting with remote Threads.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "prepublishOnly": "npm run build",
    "mocha": "ts-mocha -p tsconfig.json src/__test__/**/*.test.ts",
    "test": "rimraf reports/* && npm run report:history && ./node_modules/.bin/wdio wdio.conf.js",
    "lint": "eslint --fix --ext .mjs,.js,.jsx,.ts,.tsx src",
    "docs": "typedoc",
    "precommit": "npm run lint && npm test",
    "preversion": "npm run docs; npm run precommit",
    "release": "npm version patch",
    "postversion": "git push --follow-tags",
    "browser": "webpack --mode production",
    "serve": "webpack-dev-server --mode development --progress --color",
    "report:history": "mkdir -p allure-report/history allure-results/history && cp -a allure-report/history allure-results/",
    "clean-report": "rimraf allure-results",
    "run-report": "allure generate allure-results/ --clean && allure open -p 8000",
    "report": "npm run clean-report && npm run test ; npm run run-report"
  },
  "engines": {
    "node": ">= 10.0.0",
    "npm": ">= 3.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/textileio/js-threads-client.git"
  },
  "bugs": {
    "url": "https://github.com/textileio/js-threads-client/issues"
  },
  "keywords": [
    "textile",
    "threads",
    "IPFS",
    "p2p"
  ],
  "author": "textile.io",
  "license": "MIT",
  "dependencies": {
    "@improbable-eng/grpc-web": "^0.11.0",
    "@textile/threads-client-grpc": "0.0.1",
    "@types/google-protobuf": "^3.7.2",
    "google-protobuf": "^3.10.0",
    "uuid": "^3.3.3"
  },
  "devDependencies": {
    "@improbable-eng/grpc-web-node-http-transport": "^0.11.0",
    "@types/chai": "^4.2.5",
    "@types/mocha": "^5.2.7",
    "@types/uuid": "^3.4.6",
    "@typescript-eslint/eslint-plugin": "^2.9.0",
    "@typescript-eslint/parser": "^2.9.0",
    "@wdio/allure-reporter": "^5.13.2",
    "@wdio/cli": "^5.14.2",
    "@wdio/local-runner": "^5.14.0",
    "@wdio/mocha-framework": "^5.14.0",
    "@wdio/selenium-standalone-service": "^5.13.2",
    "@wdio/spec-reporter": "^5.13.2",
    "@wdio/sync": "^5.14.0",
    "allure-commandline": "^2.13.0",
    "chai": "^4.2.0",
    "eslint": "^6.7.1",
    "eslint-config-prettier": "^6.7.0",
    "eslint-config-strict": "^14.0.1",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-node": "^10.0.0",
    "eslint-plugin-prettier": "^3.1.1",
    "jsdoc": "^3.6.3",
    "mocha": "^6.2.2",
    "nodemon": "^1.19.4",
    "prettier": "^1.19.1",
    "prettier-eslint": "^9.0.0",
    "ts-loader": "^6.2.1",
    "ts-mocha": "^6.0.0",
    "ts-node": "^8.2.0",
    "tsconfig-paths": "^3.8.0",
    "rimraf": "^2.6.3",
    "typedoc": "^0.15.0",
    "typedoc-plugin-markdown": "^2.2.11",
    "typescript": "^3.7.2",
    "webpack": "^4.41.2",
    "webpack-cli": "^3.3.10",
    "webpack-dev-server": "^3.9.0",
    "webdriverio": "^5.14.0"
  }
}
